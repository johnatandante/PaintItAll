<UserControl x:Class="PaintItAll.ViewComponents.ImageLibrary.ImageLibraryRowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:View="clr-namespace:PaintItAll.ViewComponents.ImageLibrary"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"    
    d:DesignHeight="480" d:DesignWidth="280">
    
    <Grid x:Name="LayoutRoot">
        <ListBox x:Name="ViewListbox" ItemsSource="{Binding ItemsSource}" Tap="ImageListBoxTap" Grid.Row="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <View:ImageLibraryRowItemView />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
